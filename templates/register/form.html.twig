{% extends 'base.html.twig' %}


{% block title %}
	Inscription
{% endblock title %}


{% block body %}

	<h1 class="text-center my-4">Inscription !</h1>

	<div class="row">
		<div class="col-4 mx-auto">


           {# Vous pouvez désactiver le validateurHTML5 coté Twig avec :
              => form_start(form, {'attr': {novalidate: 'novalidate'}})#}

			{{ form_start(form) }} {#équivalent  à la balise HTML <form> #}

            <div class="row">
           <div class ="col-6"> {{ form_row(form.firstname) }} </div>
           <div class ="col-6"> {{ form_row(form.lastname) }} </div>
            </div>

            {{form_row(form.gender)}}

            <div class="row">
           <div class ="col-6"> {{ form_row(form.email) }} </div>
           <div class ="col-6"> {{ form_row(form.password) }} </div>
            </div>

            {{form_row(form.submit)}}


            {{ form_end(form) }} {#équivalent  à la balise HTML </form> #}


		</div>
	</div>


{% endblock body %}
